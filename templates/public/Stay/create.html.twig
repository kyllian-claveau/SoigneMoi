{% extends 'layout/unauthenticated/base.html.twig' %}

{% block title %}SoigneMoi | Nouveau séjour{% endblock %}

{% block content %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 pt-24">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <img class="mx-auto h-10 w-auto" src="{{asset('images/logo-center.png')}}" alt="SoigneMoi">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Créer un nouveau séjour</h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {{ form_start(form, {'attr': {'id': 'sejour-form', 'class': 'space-y-6'}}) }}
                <div>
                    <label for="{{ form.startDate.vars.id }}" class="block text-sm font-medium text-gray-700">Date d'arrivée</label>
                    <div class="mt-1">
                        {{ form_widget(form.startDate, {'attr': {'class': 'block flatpickr w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'data-min-date': 'today', 'id': 'startDateInput'}}) }}
                        {{ form_errors(form.startDate) }}
                    </div>
                </div>

                <div>
                    <label for="{{ form.endDate.vars.id }}" class="block text-sm font-medium text-gray-700">Date de fin</label>
                    <div class="mt-1">
                        {{ form_widget(form.endDate, {'attr': {'class': 'block flatpickr w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'id': 'endDateInput'}}) }}
                        {{ form_errors(form.endDate) }}
                    </div>
                </div>

                <div>
                    <label for="{{ form.reason.vars.id }}" class="block text-sm font-medium text-gray-700">Motif</label>
                    <div class="mt-1">
                        {{ form_widget(form.reason, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(form.reason) }}
                    </div>
                </div>

                <div>
                    <label for="{{ form.specialty.vars.id }}" class="block text-sm font-medium text-gray-700">Spécialité</label>
                    <div class="mt-1">
                        {{ form_widget(form.specialty, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm specialty-selector'}}) }}
                        {{ form_errors(form.specialty) }}
                    </div>
                </div>

                <div>
                    <label for="{{ form.doctor.vars.id }}" class="block text-sm font-medium text-gray-700">Docteur</label>
                    <div class="mt-1">
                        {{ form_widget(form.doctor, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm doctor-selector'}}) }}
                        {{ form_errors(form.doctor) }}
                    </div>
                </div>

                <div>
                    {% if user.roles != "['']" %}
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Enregistrer
                        </button>
                    {% else %}
                        <button id="confirm-button" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" disabled>
                            Confirmation (Authentification requise)
                        </button>
                        <div class="mt-2 text-sm text-gray-500">Veuillez vous connecter pour continuer.</div>
                    {% endif %}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
