{% extends 'layout/unauthenticated/base.html.twig' %}
{% block title %}SoigneMoi | Inscription{% endblock %}

{% block content %}
    <div class="pt-24 flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <img class="mx-auto h-10 w-auto" src="{{ asset('images/logo-center.png') }}"
                 alt="Your Company">
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Créer un compte</h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    <label for="firstname"
                           class="block text-sm font-medium leading-6 text-gray-900 required">Prénom</label>
                    <div class="mt-2">
                        {{ form_widget(form.firstname, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label for="lastname" class="block text-sm font-medium leading-6 text-gray-900 required">Nom de
                            famille</label>
                    </div>
                    <div class="mt-2">
                        {{ form_widget(form.lastname, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <label for="address" class="block text-sm font-medium leading-6 text-gray-900 required">Adresse
                        Postale</label>
                    <div class="mt-2">
                        {{ form_widget(form.address, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <label for="city" class="block text-sm font-medium leading-6 text-gray-900 required">Ville</label>
                    <div class="mt-2">
                        {{ form_widget(form.city, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <label for="postalCode" class="block text-sm font-medium leading-6 text-gray-900 required">Code
                        Postal</label>
                    <div class="mt-2">
                        {{ form_widget(form.postalCode, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium leading-6 text-gray-900 required">Adresse
                        Email</label>
                    <div class="mt-2">
                        {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <div class="mt-2">
                        {{ form_widget(form.password) }}
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="flex w-full justify-center rounded-md bg-secondary px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        S'enregistrez
                    </button>
                </div>
                {{ form_end(form) }}

                <p class="mt-10 text-center text-sm text-gray-500">
                    Déjà membre?
                    <a href="{{ path('app_login') }}"
                       class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Connexion</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}