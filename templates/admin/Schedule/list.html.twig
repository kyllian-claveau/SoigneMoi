{% extends 'layout/authenticated/admin/base.html.twig' %}
{% block title %}SoigneMoi | Tableau de bord{% endblock %}
{% block content %}
    <div class="mt-24 md:ml-64 px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <h1 class="text-base font-semibold leading-6">Plannings des médecins</h1>
                <p class="mt-2 text-sm text-gray-700">Une liste de tous les plannings des médecins</p>
            </div>
        </div>
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-primary">
                            <thead class="bg-secondary text-white">
                            <tr>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Médecin</th>
                               </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 bg-white">
                            {% for schedule in schedules %}
                                <tr>
                                    <td class="whitespace-nowrap px-3 py-4 text-sm text-blue-500"><a href="{{ path('app_doctor_show',{'id': schedule.doctor.id}) }}">{{ schedule.doctor.firstName }} {{ schedule.doctor.lastName }}</a></td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="whitespace-nowrap py-4 text-sm font-medium text-center" colspan="6">
                                        Aucun planning trouvé.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

